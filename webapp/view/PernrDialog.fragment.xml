<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog id="idPernrDialog" title="Personnel Numbers" class="sapUiPopupWithPadding" search=".OnPernrSearch"
		confirm=".OnPernrSelected" cancel="_handlePValueHelpClose" noDataText="{i18n>NoPrnrResult}"  >
		<columns>
			<Column width="7em">
				<header>
					<Text text="{i18n>Pernr}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="{i18n>PernrName}" />
				</header>
			</Column>
		</columns>		
	</TableSelectDialog>
</core:FragmentDefinition>