<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog id="idComponentDialog" title="Components" class="sapUiPopupWithPadding" search=".OnComponentSearch"
		confirm=".OnComponentSelected" cancel="_handleCValueHelpClose" noDataText="{i18n>NoComponentResult}" >
		<columns>
			<Column width="7em">
				<header>
					<Text text="{i18n>SAPMM}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="{i18n>Name}" />
				</header>
			</Column>
			<Column
				width="9em"
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Right">
				<header>
					<Text text="MPN" />
				</header>
			</Column>
			<Column
				width="9em"
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Manufacturer" />
				</header>
			</Column>
		</columns>		
	</TableSelectDialog>
</core:FragmentDefinition>